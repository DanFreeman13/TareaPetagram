<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/espacio_mascota">
4
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="@dimen/imagenperro"
            android:layout_height="@dimen/imagenperro"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/perro1"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/espacio_mascota">

            <ImageButton
                android:id="@+id/imgHuesoBlanco"
                android:layout_width="@dimen/huellita"
                android:layout_height="@dimen/huellita"
                android:src="@drawable/dog_bone_64"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvMascotaCV"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/pnombre"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvLikesCV"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/plikes"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="@dimen/espacio_mascota"
                android:layout_gravity="center_vertical"
                android:textAlignment="textEnd"
                android:layout_marginLeft="15dp"

               />
            <ImageView
                android:id="@+id/imgHuesoAmarillo"
                android:layout_width="@dimen/estrellita"
                android:layout_height="@dimen/estrellita"
                android:src="@drawable/dog_bone_yellow_48"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>