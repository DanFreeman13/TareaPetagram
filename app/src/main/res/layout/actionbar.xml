<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevacion_actionbar"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >

    <ImageView
        android:layout_width="@dimen/huellita"
        android:layout_height="@dimen/huellita"
        android:src="@drawable/dog_paw_filled_50"/>

    <TextView
        android:layout_width="@dimen/anchoTitulo"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <ImageButton
        android:layout_width="@dimen/estrellita"
        android:layout_height="@dimen/estrellita"
        android:src="@drawable/star_filled_50"
        android:background="@color/transparente"
        android:scaleType="centerInside"
        android:onClick="irAFavoritas"
        />

    <ImageView
        android:layout_width="@dimen/huellita"
        android:layout_height="@dimen/huellita"
        android:src="@drawable/menu_vertical_48"
        />



</android.support.v7.widget.Toolbar>